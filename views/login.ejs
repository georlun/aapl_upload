<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
	<link rel="stylesheet" type="text/css" href="views/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" type="text/css" href="views/css/font-awesome.min.css"> <!-- load fontawesome -->
	<link rel="stylesheet" type="text/css" href="views/css/style2.css">
    <title>AAPL Authentication</title>
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<div class='container2'>
        <div>
            <img src="views/images/aaplicon.jpg" alt="company icon" class='iconDetails'>
        </div>  
		<div style='margin-left:130px;'>
			<h1>Customer Login</h1>
		</div>
	</div>
	<hr>
	<!--
	<br><br><br>
	-->
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email" <% if (userm.length > 0) { %>value="<%= userm %>" <% } else { %> autofocus <% } %> required >
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required <% if (userm.length > 0) { %> autofocus <% } %>>
        </div>

        <button type="submit" class="btn btn-block btn-lg btn-primary">Sign in</button>
    </form>

</div>

</div>
</body>
</html>